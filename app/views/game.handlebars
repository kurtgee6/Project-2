<!DOCTYPE html>
<html>
  <head>
        <meta charset="UTF-8">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/phaser.min.js"></script>

        <script src="js/boot.js" type="text/javascript"></script>
        <script src="js/Preload.js" type="text/javascript"></script>
        <script src="js/Game.js" type="text/javascript"></script>
        <script src="js/Battle.js" type="text/javascript"></script>
        <script src="js/Shop.js" type="text/javascript"></script>
        <script src="js/functionObjects/client.js" type="text/javascript"></script>
        <script src="js/functionObjects/generator.js" type='text/javascript'></script>
        <script src="js/functionObjects/interaction.js" type='text/javascript'></script>
        <script src="js/functionObjects/player.js" type='text/javascript'></script>
        <script src="js/functionObjects/collision.js" type='text/javascript'></script>
        <style>
        #game {
            position: relative;
            margin: auto;
            display:block;
            width:800;
            height: 600;
            overflow:hidden
        }

        canvas{
          margin: 0 ;
          margin-right: 0;
        }
        
        .interaction{
          margin: auto;
          display: none;
          position: absolute;
          bottom: 5%;
          width: 100%;
          height: 5%;
          z-index: 5
        }

        .announcement{
          text-align: center;
          font-size: 40px;
          color: red;
          position: absolute;
          bottom: 50%;
          width: 100%;
          height: 5%;
        }

        .announcement-item{
          background-color: rgba(255,255,255,.7);
          font-size: 2rem;
        }

        .wrapper{
          text-align: center
        }

        .battle-btn{
          margin: 10px;
        }
        #battle-accept,#battle-decline{display:none}

        .battle-info{
          position: absolute;
          border: 1px solid black;
          background-color: rgba(255,255,255,.8);
          left: 5%;
          bottom: 14%;
          width: 90%;
          height: 25%;
          display:none;
        }

        .battle-options{
          position: absolute;
          border: 1px solid black;
          text-align: center;
          background-color: rgba(255,255,255,.8);
          left: 5%;
          bottom: 2%;
          width: 90%;
          display:none
        }

        .stats-wrapper{
          display:inline-block;
          width:40%;
          padding: 0 5%

        }

        .stats-name{
          font-weight: bold;
          font-size: 1.5rem;
          text-align: center;
          margin: 0.5rem 0
        }

        .stats-HP{
          border: 1px solid black;
          background-color: red;
          font-size: 1.2rem;
          font-weight: bold;
          padding: .3rem 1rem;
        }

        .stats-MP{
          border: 1px solid black;
          background-color: blue;
          font-size: 1.2rem;
          font-weight: bold;
          padding: .3rem 1rem;
          color: white
        }

        .action-btn{
          font-size: 2rem;
          text-align: center;
          margin: .5rem;  
        }

        </style>
  </head>
  <body>
     <div id='game'>
      <div class='announcement'></div>
      <div class='interaction'></div>
      <div class='battle-info'></div>
      <div class='battle-options'></div>
     </div>

    <script src='js/functionObjects/htmlInteraction.js' type='text/javascript'></script>
    <script src="js/main.js" type="text/javascript"></script>

    <script>
    </script>
  </body>
</html>